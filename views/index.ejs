<%- include("partials/header.ejs") %>

<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <a href="/ask" class="btn btn-primary">Ask question</a>
        <br>
        <% questionModule.forEach(questionModule => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><p><%= questionModule.title %></p></h3>
                </div>
                <div class="card-footer">
                    <a href="/question/<%=questionModule.id%>"><button class="btn btn-primary">Answer</button></a>    
                </div>
            </div>
            
        <% }) %>
    </div>
</body>

<%- include("partials/footer.ejs") %>